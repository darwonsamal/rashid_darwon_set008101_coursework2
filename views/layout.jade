doctype html
html(lang='en')
  head
    title Blog Machine
    meta(name='viewport', content='width=device-width, initial-scale=1')
    link(href='/stylesheets/bootstrap.css', rel='stylesheet')
    link(href='/stylesheets/style.css', rel='stylesheet')
  body
    .navbar.navbar-default(role='navigation')
      .container
        .navbar-header
          button.navbar-toggle(type='button', data-toggle='collapse', data-target='.navbar-collapse')
            span.sr-only Toggle navigation
            span.icon-bar
            span.icon-bar
            span.icon-bar
          a.navbar-brand(href='#') Blog Machine
        .navbar-collapse.collapse
          ul.nav.navbar-nav
            if user
             li(class=(title == 'Home' ? 'active' : ''))
               a(href='/') Home 
             li(class=(title == 'My Posts' ? 'active' : ''))
               a(href = '/posts/myposts') My Posts
             li(class=(title == 'Add Post' ? 'active' : ''))
               a(href='/posts/add') Add Post
             li(class=(title == 'Add Category' ? 'active' : ''))
               a(href='/categories/add') Add Category
            if !user
             li(class=(title == 'Register' ? 'active' : ''))
               a(href='/users/register') Register
             li(class=(title == 'Login' ? 'active' : ''))
               a(href='/users/login') Login
          ul.nav.navbar-nav.navbar-right
           if user
            li(class=(title == 'My Profile' ? 'active' : ''))
              a(href= '/users/myprofile/#{user._id}') My Profile
            li
              a(href='/users/logout') Logout
    .container
     != messages()
     block content
     footer
      p Blog Machine &copy; 2018
     
    script(src='https://ajax.googleapis.com/ajax/libs/jquery/1.11.1/jquery.min.js')
    script(src='javascripts/bootstrap.js')
