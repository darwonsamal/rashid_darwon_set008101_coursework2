extends layout

block content
  if !posts 
   h3 You have no posts yet!
  else
   each post, i in posts
    .post
     h1
      a(href='/posts/show/#{post._id}')
       =post.title
     p.meta Posted in 
      a(href='/categories/show/#{post.category}') #{post.category} 
      on #{moment(post.date).format("MM-DD-YYYY")}
     if post.mainimage == "noimage.jpg"
     else
      img(src='/images/#{post.mainimage}')
      br    
     !=shortenText(post.body,500)
     a.more(href='/posts/show/#{post._id}') Read More
     br
     br
     br
     a(href='/posts/editpost/#{post._id}')
      input.btn.btn-primary(type='button', name= 'editpost', value= 'Edit Post')
     a(href='/posts/deletepost/#{post._id}')
      input.btn.btn-primary(type='button', name= 'deletepost', value= 'Delete Post') 
    

     
